<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/actionbar_background"
    android:layout_height="180dp" >
    <RelativeLayout 
        android:id="@+id/fankui_relative2"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >
    <ImageView
        android:id="@+id/iguide_titletwo_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:paddingLeft="20dp"
        android:paddingTop="13dp" 
        android:paddingRight="20dp"
        android:paddingBottom="13dp"
         android:background="@drawable/iguide_actionbar_bg_selector"
        android:layout_centerVertical="true"
        android:src="@drawable/login_jitou"
        android:contentDescription="@string/app_name"
               
/>
	    <TextView 
	        android:id="@+id/iguide_titletwo_center_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	        android:textColor="#ffffff"
	        android:textSize="18sp"
	        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/fankui_relative" 
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#38afe7"
        android:layout_below="@id/fankui_relative2">
        <com.itg.ui.view.CircularImage
            android:id="@+id/iguide_titletwo_touxiang_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:src="@drawable/menu_fankui_tx"/>
        <TextView
            android:id="@+id/iguide_titletwo_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/iguide_titletwo_touxiang_image"
            android:layout_marginLeft="22dp"
            android:textSize="18sp"
            />
    </RelativeLayout>

</RelativeLayout>
