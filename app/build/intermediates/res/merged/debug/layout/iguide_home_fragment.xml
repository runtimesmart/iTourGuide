<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="#f5f5f5" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cdcdcc" />

            <com.itg.ui.view.RippleView
                android:id="@+id/iguide_home_list_linear"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/iguide_home_list_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/nav_liebiao" />

                <TextView
                    android:id="@+id/iguide_home_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_list"
                    android:textColor="#313131" />
            </com.itg.ui.view.RippleView>

            <com.itg.ui.view.RippleView
                android:id="@+id/iguide_home_rim_linear"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <ImageView
                    android:id="@+id/iguide_home_rim_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/nav_zhoubian" />

                <TextView
                    android:id="@+id/iguide_home_rim_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_rim"
                    android:textColor="#313131" />
            </com.itg.ui.view.RippleView>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iguide_home_map_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav_ditubiao" />

</RelativeLayout>