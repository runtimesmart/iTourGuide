<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    android:orientation="vertical">
    <include 
        android:id="@+id/setting_include"
        layout="@layout/iguide_title_two"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="18dp"
            android:background="#dddddd"/>
    <RelativeLayout
        android:id="@+id/iguide_setting_touxiang_relative"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background_select"
        >
        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:layout_marginRight="18dp"
            android:src="@drawable/menu_geren_biao01"/>
        <TextView 
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/setting_image"
            android:textColor="#555555"
            android:textSize="15sp"
            android:text="头  像"/>
        <ImageView
            android:id="@+id/setting_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="39dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu_jt"/>
        <com.itg.ui.view.CircularImage
            android:id="@+id/iguide_setting_touxiang_image"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/setting_image2"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:src="@drawable/menu_geren_tx"
            />
    </RelativeLayout>
	<TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="18dp"
            android:background="#dddddd"/>
	<TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>
	<RelativeLayout 
	    android:id="@+id/iguide_setting_shoucang_relative"
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
        android:background="@drawable/background_select"
        android:visibility="gone"
	    >
	    <ImageView 
	        android:id="@+id/setting_image3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="39dp"
	        android:src="@drawable/menu_geren_biao02"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="我的收藏"
	        android:layout_toRightOf="@id/setting_image3"
	        android:layout_marginLeft="18dp"/>
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="39dp"
	        android:src="@drawable/menu_jt"/>
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#dddddd"
	    android:visibility="gone"
	    android:layout_marginLeft="75dp"/>
	<RelativeLayout 
	    android:id="@+id/iguide_setting_jilu_relative"
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
	    android:visibility="gone"
        android:background="@drawable/background_select"
	    >
	    <ImageView
	        android:id="@+id/setting_image4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="39dp"
	        android:src="@drawable/menu_geren_biao03"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="历史记录"
	        android:layout_toRightOf="@id/setting_image4"
	        android:layout_marginLeft="18dp"/>
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="39dp"
	        android:src="@drawable/menu_jt"/>
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#dddddd"
	    android:visibility="gone"
	    android:layout_marginLeft="75dp"/>
	<RelativeLayout 
	    android:id="@+id/iguide_setting_xiazai_relative"
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
        android:background="@drawable/background_select"
	    >
	    <ImageView
	        android:id="@+id/setting_image5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="39dp"
	        android:src="@drawable/menu_geren_biao04"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="我的下载"
	        android:layout_toRightOf="@id/setting_image5"
	        android:layout_marginLeft="18dp"/>
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="39dp"
	        android:src="@drawable/menu_jt"/>
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#dddddd"/>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_marginTop="18dp"
	    android:background="#dddddd"/>
	<RelativeLayout 
	    android:id="@+id/iguide_setting_huancun_relative"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
        android:background="@drawable/background_select"
	    >
	    <ImageView
	        android:id="@+id/setting_image6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="39dp"
	        android:src="@drawable/menu_hc"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="清除缓存"
	        android:layout_toRightOf="@id/setting_image6"
	        android:layout_marginLeft="18dp"/>
	    <ImageView
	        android:id="@+id/iguide_setting_huancun_image1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="39dp"
	        android:src="@drawable/menu_jt"/>
	    <TextView 
	        android:id="@+id/iguide_setting_huancun_text2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/iguide_setting_huancun_image1"
	        android:layout_centerVertical="true"
	        />
	</RelativeLayout>
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#dddddd"/>
</LinearLayout>
