<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff">
    <include 
        android:id="@+id/login_include"
        layout="@layout/iguide_title"/>
    <RelativeLayout
        android:id="@+id/login_relative" 
        android:layout_width="321dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_include"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iguide_edit_border"
        >
        <ImageView
            android:id="@+id/login_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_sjm"/>
        <EditText 
        android:id="@+id/iguide_login_phone_text"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/login_image"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:background="@null"
        android:hint="请输入手机号"/>
    </RelativeLayout>
	<RelativeLayout
	    android:id="@+id/login_relative2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/login_relative"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="15dp"
	    >
	<RelativeLayout 
	    android:id="@+id/login_relative3"
	    android:layout_width="215dp"
	    android:layout_height="50dp"
	    android:background="@drawable/iguide_edit_border">
	    <ImageView
	        android:id="@+id/login_image2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
	        android:layout_centerVertical="true"
	        android:src="@drawable/login_mm"/>
	    <EditText 
	        android:id="@+id/iguide_login_sms_text"
	        android:layout_width="210dp"
	        android:layout_height="wrap_content"
	        android:hint="请输入验证码"
	        android:layout_toRightOf="@id/login_image2"
	        android:layout_centerVertical="true"
	        android:inputType="number"
	        android:background="@null"/>
	</RelativeLayout>
	<Button 
	    android:id="@+id/iguide_login_sms_button"
	    android:layout_width="100dp"
	    android:layout_height="49dp"
	    android:text="获取验证码"
	    android:layout_toRightOf="@id/login_relative3"
	    android:layout_marginLeft="10dp"
	    android:textColor="#ffffff"
	    android:background="@drawable/login_yazheng"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/login_relative4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/login_relative2"
	    android:layout_marginTop="33dp">
	    <Button 
	        android:id="@+id/iguide_login_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#ffffff"
	        android:background="@drawable/iguide_login_selector"
	        android:text="点击登录"/>
	    <Button 
	        android:id="@+id/iguide_login_button2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="37dp"
	        android:layout_toRightOf="@id/iguide_login_button"
	        android:textColor="#ffffff"
	        android:background="@drawable/iguide_experience_selector"
	        android:text="体验登录"/>
	</RelativeLayout>
	<ImageView 
	    android:id="@+id/login_relative5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/login_relative4"
	    android:layout_marginTop="42dp"
	    android:layout_marginBottom="30dp"
	    android:background="@drawable/login_xx"/>
	<RelativeLayout 
	    android:id="@+id/login_relative6"
	    android:layout_width="321dp"
	    android:layout_height="20dp"
	    android:layout_below="@id/login_relative5"
	    android:layout_centerHorizontal="true">
	    <TextView 
	        android:layout_width="100dp"
	        android:layout_height="1dp"
	        android:layout_centerVertical="true"
	        android:background="#c0c0c0"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textColor="#878787"
	        android:text="第三方登录"/>
	    <TextView 
	        android:layout_width="100dp"
	        android:layout_height="1dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:background="#c0c0c0"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="30dp"
	    android:layout_below="@+id/login_relative6">
	    <LinearLayout
	        android:id="@+id/iguide_login_share_qq"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="35dp"
	        android:layout_marginRight="35dp"
	        android:orientation="vertical">
	        <ImageView
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:src="@drawable/login_qq"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:layout_marginLeft="15dp"
	            android:text="QQ"/>
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/iguide_login_share_weixin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/iguide_login_share_qq"
	        android:orientation="vertical">
	        <ImageView 
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:src="@drawable/login_wx"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:layout_marginLeft="7dp"
	            android:text="微信"/>
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/iguide_login_share_sina"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iguide_login_share_qq"
	        android:orientation="vertical">
	        <ImageView
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:src="@drawable/login_sn"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="新浪微博"/>
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
