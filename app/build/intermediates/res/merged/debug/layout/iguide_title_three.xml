<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/actionbar_background" >

    <ImageView
        android:id="@+id/iguide_title_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/menu_fankui_jt"
                android:paddingLeft="20dp"
        android:paddingTop="13dp" 
        android:paddingRight="20dp"
        android:paddingBottom="13dp"
         android:background="@drawable/iguide_actionbar_bg_selector"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/iguide_local_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:clickable="true"
            android:focusable="false"
            android:textColor="#ffffff"
            android:textSize="18sp" />
        
    </LinearLayout>

    <ImageView
        android:id="@+id/iguide_title_right_image_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/list_xq_dt"
        android:contentDescription="@string/app_name"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingTop="11dp" 
        android:paddingRight="20dp"
        android:paddingBottom="11dp"
         android:background="@drawable/iguide_actionbar_bg_selector"/>

</RelativeLayout>
